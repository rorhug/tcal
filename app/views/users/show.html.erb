<% if user_ready_to_sync? %>
  <%= link_to root_path, class: "ui button labeled icon basic" do %>
    <i class="icon chevron left"></i> Back
  <% end %>
<% end %>

<div class="ui two ordered steps">
  <%= link_to setup_google_path class: "<%= current_user ? "completed" : "active" %> step" do %>
    <div class="content">
      <div class="title">Google<%= ": #{current_user.name}" if current_user %></div>
      <div class="description">Connect your Google Calendar</div>
    </div>
  <% end %>
  <div class="<%= user_ready_to_sync? ? "completed" : (current_user ? "active" : "disabled") %> step">
    <div class="content">
      <div class="title">My TCD</div>
      <div class="description">Connect my.tcd.ie</div>
    </div>
  </div>
</div>


<% if current_user %>
  <%= render partial: "my_tcd_login_form" %>
<% else %>
  <div class="ui center aligned basic segment">
    <%= link_to '/auth/google_oauth2', class: "ui primary button massive labeled icon" do %>
      <i class="google icon"></i> Connect Google
    <% end %>
  </div>
<% end %>

  <%= button_to logout_user_path, method: :delete, class: "ui button labeled icon basic" do %>
    <i class="delete icon"></i> Logout
  <% end %>
